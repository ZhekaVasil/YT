#!/bin/sh
# Wiki push

wikiFolder="YT.wiki"
wikiStatus=$(git status ./$wikiFolder --porcelain)


if [ -e ./$wikiFolder ]
then
  if [[ "$wikiStatus" = *"M $wikiFolder"* ]]
  then
  echo
  echo "Wiki has changed. Please commit and push the changes from Wiki repository - $wikiFolder"
  echo
  exit 1
  fi
else
  echo
  echo "Wiki page is absent in your local repository"
  echo
fi

